@model KwikMedical.Models.EmergencyCall

@{
    ViewData["Title"] = "Edit Emergency Call";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Edit Emergency Call Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-4">
                        <label asp-for="EmergencyDetails" class="control-label">Emergency Details</label>
                        <input asp-for="EmergencyDetails" class="form-control" />
                        <span asp-validation-for="EmergencyDetails" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="EmergencyCity" class="control-label">Emergency City</label>
                        <input asp-for="EmergencyCity" class="form-control" />
                        <span asp-validation-for="EmergencyCity" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="EmergencyStatus" class="control-label">Emergency Status</label>
                        <input asp-for="EmergencyStatus" class="form-control" />
                        <span asp-validation-for="EmergencyStatus" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="NearestHospital" class="control-label">Nearest Hospital</label>
                        <input asp-for="NearestHospital" class="form-control" />
                        <span asp-validation-for="NearestHospital" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="PatientId" class="control-label">Patient</label>
                        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">
                            <option value="">-- Select Patient --</option>
                        </select>
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
