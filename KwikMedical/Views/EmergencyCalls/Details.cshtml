@model KwikMedical.Models.MedicalRecord

<h2>Medical Record Details</h2>

<p>
    <strong>Patient:</strong> @Model.Patient.FirstName @Model.Patient.LastName <br>
    <strong>Clinical Notes:</strong> @Model.ClinicalNotes <br>
    <strong>Laboratory Reports:</strong> @Model.LaboratoryReports <br>
    <strong>X-rays:</strong> @Model.Xrays <br>
    <strong>Letters:</strong> @Model.Letters <br>
    <strong>Prescription Charts:</strong> @Model.PrescriptionCharts <br>
    <strong>Telephone Calls:</strong> @Model.TelephoneCalls
</p>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
