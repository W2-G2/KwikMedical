@model KwikMedical.Models.EmergencyCall

<h2>New Emergency Call</h2>

<form asp-action="CreateEmergencyCall" method="post">
    <div>
        <label for="OperatorName">Operator Name:</label>
        <input type="text" id="OperatorName" name="OperatorName" required />
    </div>
    <div>
        <label for="MedicalCondition">Medical Condition:</label>
        <input type="text" id="MedicalCondition" name="MedicalCondition" required />
    </div>
    <div>
        <label for="EmergencyDetails">Emergency Details:</label>
        <textarea id="EmergencyDetails" name="EmergencyDetails" required></textarea>
    </div>
    <div>
        <label for="EmergencyCity">Emergency City:</label>
        <input type="text" id="EmergencyCity" name="EmergencyCity" required />
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>
