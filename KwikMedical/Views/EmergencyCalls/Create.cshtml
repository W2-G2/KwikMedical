@model KwikMedical.Models.EmergencyCall

<h2>Log New Emergency Call</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PatientId">Patient</label>
        <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="EmergencyDetails">Emergency Details</label>
        <textarea asp-for="EmergencyDetails" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label asp-for="EmergencyCity">Emergency City</label>
        <input asp-for="EmergencyCity" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="MedicalCondition">Medical Condition</label>
        <input asp-for="MedicalCondition" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Log Call" class="btn btn-primary" />
    </div>
</form>
