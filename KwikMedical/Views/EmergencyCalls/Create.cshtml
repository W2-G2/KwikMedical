@model KwikMedical.Models.EmergencyCall
@{
    ViewData["Title"] = "Create";
}

<h2>Create Emergency Call</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Patient.FirstName">Patient First Name</label>
        <input asp-for="Patient.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patient.LastName">Patient Last Name</label>
        <input asp-for="Patient.LastName" class="form-control" />
    </div>
    <!-- ... other patient details ... -->
    <div class="form-group">
        <label asp-for="MedicalCondition">Medical Condition</label>
        <textarea asp-for="MedicalCondition" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
