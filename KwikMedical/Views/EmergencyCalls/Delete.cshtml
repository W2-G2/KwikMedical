@model KwikMedical.Models.EmergencyCall

@{
    ViewData["Title"] = "Confirm Emergency Call Deletion";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Are you sure you want to delete this emergency call?</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-4">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EmergencyDetails)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.EmergencyDetails)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EmergencyCity)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.EmergencyCity)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EmergencyStatus)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.EmergencyStatus)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NearestHospital)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NearestHospital)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Patient)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Patient.Id)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
