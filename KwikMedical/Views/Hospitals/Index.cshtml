@model IEnumerable<KwikMedical.Models.Hospital>

<h2>Hospitals List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hospital in Model)
        {
            <tr>
                <td>@hospital.Name</td>
                <td>@hospital.City</td>
                <td>
                    <a asp-action="Details" asp-route-id="@hospital.Id" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@hospital.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@hospital.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Hospital</a>
