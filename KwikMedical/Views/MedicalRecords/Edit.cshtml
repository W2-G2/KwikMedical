@model KwikMedical.Models.MedicalRecord

<h2>Edit Medical Record</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="PatientId">Patient</label>
        <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="ClinicalNotes">Clinical Notes</label>
        <textarea asp-for="ClinicalNotes" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="LaboratoryReports">Laboratory Reports</label>
        <textarea asp-for="LaboratoryReports" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Xrays">X-rays</label>
        <textarea asp-for="Xrays" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Letters">Letters</label>
        <textarea asp-for="Letters" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="PrescriptionCharts">Prescription Charts</label>
        <textarea asp-for="PrescriptionCharts" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="TelephoneCalls">Telephone Calls</label>
        <textarea asp-for="TelephoneCalls" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="Update Record" class="btn btn-primary" />
    </div>
</form>
