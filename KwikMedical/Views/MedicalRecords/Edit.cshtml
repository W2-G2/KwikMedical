@model KwikMedical.Models.MedicalRecord

<h2>Edit Medical Record</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="LaboratoryReports" class="control-label"></label>
        <input asp-for="LaboratoryReports" class="form-control" />
        <span asp-validation-for="LaboratoryReports" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TelephoneCalls" class="control-label"></label>
        <input asp-for="TelephoneCalls" class="form-control" />
        <span asp-validation-for="TelephoneCalls" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Xrays" class="control-label"></label>
        <input asp-for="Xrays" class="form-control" />
        <span asp-validation-for="Xrays" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Letters" class="control-label"></label>
        <input asp-for="Letters" class="form-control" />
        <span asp-validation-for="Letters" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrescriptionCharts" class="control-label"></label>
        <input asp-for="PrescriptionCharts" class="form-control" />
        <span asp-validation-for="PrescriptionCharts" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClinicalNotes" class="control-label"></label>
        <input asp-for="ClinicalNotes" class="form-control" />
        <span asp-validation-for="ClinicalNotes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PatientId" class="control-label"></label>
        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>

</form>
