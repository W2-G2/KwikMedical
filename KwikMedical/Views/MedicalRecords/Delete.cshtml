@model KwikMedical.Models.MedicalRecord

<h2>Are you sure you want to delete this record?</h2>

<p>
    <strong>Patient:</strong> @Model.Patient.FirstName @Model.Patient.LastName <br>
    <strong>Clinical Notes:</strong> @Model.ClinicalNotes
</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
