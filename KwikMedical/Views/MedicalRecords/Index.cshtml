@model IEnumerable<KwikMedical.Models.MedicalRecord>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LaboratoryReports)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelephoneCalls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Xrays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Letters)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrescriptionCharts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClinicalNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LaboratoryReports)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelephoneCalls)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Xrays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Letters)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrescriptionCharts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicalNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
