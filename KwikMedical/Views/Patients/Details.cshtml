@model KwikMedical.Models.Patient

<h2>Patient Details</h2>

<p>
    <strong>Name:</strong> @Model.FirstName @Model.LastName <br>
    <strong>NHS Number:</strong> @Model.NHSNumber <br>
    <strong>Address:</strong> @Model.Address, @Model.City, @Model.Postcode
</p>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
<a asp-action="Details" asp-controller="MedicalRecords" asp-route-id="@Model.Id" class="btn btn-info">View Medical Record</a>
