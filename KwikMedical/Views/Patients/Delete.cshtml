@model KwikMedical.Models.Patient

<h2>Are you sure you want to delete this patient?</h2>

<p>
    <strong>Name:</strong> @Model.FirstName @Model.LastName <br>
    <strong>NHS Number:</strong> @Model.NHSNumber <br>
    <strong>Address:</strong> @Model.Address, @Model.City, @Model.Postcode
</p>

<form asp-action="Delete" asp-route-id="@Model.Id">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

