@model IEnumerable<KwikMedical.Models.Patient>

<h2>Patients List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>NHS Number</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.FirstName @patient.LastName</td>
                <td>@patient.NHSNumber</td>
                <td>@patient.Address, @patient.City, @patient.Postcode</td>
                <td>
                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Patient</a>
