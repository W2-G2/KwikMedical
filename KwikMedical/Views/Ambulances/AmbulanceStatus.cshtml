@model KwikMedical.Models.Ambulance

<h2>Ambulance Status</h2>

<form asp-action="UpdateStatus" method="post">
    <div>
        <label for="Code">Ambulance Code:</label>
        <input type="text" id="Code" name="Code" value="@Model.Code" readonly />
    </div>
    <div>
        <label for="IsAvailable">Is Available:</label>
        <select id="IsAvailable" name="IsAvailable">
<option value="true" selected="@(Model.IsAvailable ? "selected" : null)">Yes</option>
<option value="false" selected="@(!Model.IsAvailable ? "selected" : null)">No</option>
        </select>
    </div>
    <div>
        <label for="CurrentCity">Current City:</label>
        <input type="text" id="CurrentCity" name="CurrentCity" value="@Model.CurrentCity" required />
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>
</form>
