@model KwikMedical.Models.Ambulance

@{
    ViewData["Title"] = "Add New Ambulance";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Enter Ambulance Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="form-group mb-4">
                        <label asp-for="HospitalId" class="control-label">Assigned Hospital</label>
                        <select asp-for="HospitalId" class="form-control" asp-items="ViewBag.Hospitals">
                            <option value="">-- Select Hospital --</option>
                        </select>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Code" class="control-label">Ambulance Code</label>
                        <input asp-for="Code" class="form-control" placeholder="Enter ambulance code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="custom-control custom-checkbox mb-4">
                        <input asp-for="IsAvailable" class="custom-control-input" id="IsAvailableCheckbox" />
                        <label class="custom-control-label" for="IsAvailableCheckbox" asp-for="IsAvailable">Is Available</label>
                    </div>

                    <input asp-for="CurrentCity" type="hidden" />

                    <div class="form-group">
                        <input type="submit" value="Add Ambulance" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
