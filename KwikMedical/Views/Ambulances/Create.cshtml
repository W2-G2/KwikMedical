@model KwikMedical.Models.Ambulance

<h2>Create New Ambulance</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="HospitalId" class="control-label"></label>
        <select asp-for="HospitalId" class="form-control" asp-items="ViewBag.Hospitals">
            <option value="">-- Select Hospital --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="custom-control custom-checkbox">
        <input asp-for="IsAvailable" class="custom-control-input" />
        <label class="custom-control-label" asp-for="IsAvailable"></label>
    </div>

    <!-- Add this hidden field -->
    <input type="hidden" asp-for="HospitalId" value="@ViewBag.HospitalId" />
    <input asp-for="CurrentCity" type="hidden" />


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
