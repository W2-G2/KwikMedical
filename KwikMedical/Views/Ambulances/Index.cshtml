@model IEnumerable<KwikMedical.Models.Ambulance>

<h2>Ambulances List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Current City</th>
            <th>Assigned Hospital</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ambulance in Model)
        {
            <tr>
                <td>@ambulance.Code</td>
                <td>@ambulance.CurrentCity</td>
                <td>@ambulance.Hospital.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@ambulance.Id" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@ambulance.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@ambulance.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Ambulance</a>
