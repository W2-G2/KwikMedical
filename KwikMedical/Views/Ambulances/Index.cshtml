@model IEnumerable<KwikMedical.Models.Ambulance>

<div class="container mt-5">
    <h2 class="mb-4">Ambulances</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Create New Ambulance</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <th>@Html.DisplayNameFor(model => model.IsAvailable)</th>
                <th>@Html.DisplayNameFor(model => model.CurrentEmergencyCall)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                    <td>@Html.DisplayFor(modelItem => item.CurrentEmergencyCall)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        <button type="button" class="btn btn-primary btn-sm acceptCallButton" data-ambulance="@item.Id" data-bs-toggle="modal" data-bs-target="#dispatchModal">
                            Accept Call
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Unaccepted Calls Partial View -->
    @await Html.PartialAsync("_UnacceptedCallsPartial", (IEnumerable<KwikMedical.Models.EmergencyCall>)ViewData["UnacceptedCalls"])

    <!-- Travel Modal -->
    <div class="modal fade" id="travelModal" tabindex="-1" aria-labelledby="travelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="travelModalLabel">Travel Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="travelToPatientTime">Traveling to patient...</p>
                    <div id="sceneDetailsSection" style="display:none;">
                        <!-- Scene details form goes here. This can include patient details, medical conditions, etc. -->
                    </div>
                    <p id="travelToHospitalTime" style="display:none;">Traveling to hospital...</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="submitSceneDetails" style="display:none;">Submit Details</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript Logic -->
    <script>
        $(document).ready(function () {
            // Script to handle the modal display for assigning calls from the partial view
            $('.assign-call-btn').on('click', function () {
                var callId = $(this).data('call-id');
                var ambulanceId = $(this).data('ambulance-id'); // Assuming you've added data-ambulance-id attribute to the button

                // Assign the call to the ambulance in the backend
                $.ajax({
                    url: '/Ambulances/AssignCall', // Assuming you have an AssignCall action in Ambulances controller
                    type: 'POST',
                    data: {
                        callId: callId,
                        ambulanceId: ambulanceId
                    },
                    success: function (response) {
                        if (response.success) {
                            // If the call was successfully assigned, show the modal
                            $('#travelModal').modal('show');
                            $('#travelToPatientTime').text('Traveling to patient... Estimated time: 10 seconds');
                            setTimeout(function () {
                                $('#sceneDetailsSection').show();
                                $('#travelToPatientTime').text('Arrived at patient location.');
                                $('#travelToHospitalTime').text('Traveling to hospital... Estimated time: 10 seconds');
                            }, 10000); // After 10 seconds (travel time to patient)
                        } else {
                            alert('Error assigning call to ambulance.');
                        }
                    },
                    error: function () {
                        alert('Error assigning call to ambulance.');
                    }
                });
            });

            // Handle the submission of scene details
            $('#submitSceneDetails').on('click', function () {
                // Logic to submit scene details and update the database goes here
                // After submitting, start the timer for traveling to the hospital
                $('#sceneDetailsSection').hide();
                $('#travelToHospitalTime').show();
                setTimeout(function () {
                    $('#travelModal').modal('hide');
                    // Logic to update the ambulance status and remove the emergency call goes here
                }, 10000); // After 10 seconds (travel time to hospital)
            });
        });

    </script>
