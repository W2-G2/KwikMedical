@model KwikMedical.Models.Ambulance

@{
    ViewData["Title"] = "Confirm Ambulance Deletion";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4>Are you sure you want to delete the following ambulance?</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Ambulance Code:</dt>
                    <dd class="col-sm-8">@Model.Code</dd>

                    <dt class="col-sm-4">Is Available:</dt>
                    <dd class="col-sm-8">@Model.IsAvailable</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
