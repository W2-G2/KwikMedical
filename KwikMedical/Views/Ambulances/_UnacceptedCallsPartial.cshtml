@model IEnumerable<KwikMedical.Models.EmergencyCall>

<div class="container mt-5">
    <h3 class="mb-4">Active Emergency Calls</h3>

    <table class="table table-striped table-hover">
        <thead class="table-danger">
            <tr>
                <th>Call ID</th>
                <th>Patient</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var call in Model)
            {
                <tr>
                    <td>@call.Id</td>
                    <td>@call.PatientId</td>
                    <td>@call.EmergencyDetails</td>
                    <td>
                        <button class="btn btn-primary btn-sm assign-call-btn" data-call-id="@call.Id">Assign to Ambulance</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
