@model KwikMedical.Models.Ambulance

@{
    ViewData["Title"] = "Edit Ambulance Details";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Update Ambulance Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-4">
                        <label asp-for="Code" class="control-label">Ambulance Code</label>
                        <input asp-for="Code" class="form-control" placeholder="Enter ambulance code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="custom-control custom-checkbox mb-4">
                        <input asp-for="IsAvailable" class="custom-control-input" id="IsAvailableCheckbox" />
                        <label class="custom-control-label" for="IsAvailableCheckbox" asp-for="IsAvailable">Is Available</label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
